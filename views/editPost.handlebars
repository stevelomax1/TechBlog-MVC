<section class="post card">
  <header class="head-block">
    <h2>Edit Post</h2>
  </header>
  <form id="edit-post-form" class="cardC-body">
    <input type="hidden" name="post-id" value="{{post.id}}">

    <div class="form-group">
      <label class="userform-label" for="post-title">title</label>
      <input type="text" id="post-title" name="post-title" value="{{post.title}}" class="form-input">
    </div>

    <div class="form-group">
      <label class="userform-label" for="post-body">Content</label>
      <textarea id="post-body" name="post-body" class="form-input">{{post.body}}</textarea>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn">CHANGE</button>
      <button type="button" id="delete-btn" class="btn">DELETE</button>
    </div>
  </form>
</section>

<script src="/js/editPost.js"></script>